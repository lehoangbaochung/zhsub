<Window x:Class="zhsub.Windows.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zhsub.Windows"
        mc:Ignorable="d" Background="Aquamarine"
        Title="File format" Height="120" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <StackPanel Margin="5 10 15 0">
        <DockPanel >
            <Label>Select file format:</Label>
            <ComboBox x:Name="cbxFormat">
                <ComboBoxItem>ASS</ComboBoxItem>
                <ComboBoxItem>KRC</ComboBoxItem>
                <ComboBoxItem>LRC</ComboBoxItem>
                <ComboBoxItem>QRC</ComboBoxItem>
                <ComboBoxItem>SBV</ComboBoxItem>
                <ComboBoxItem>SRT</ComboBoxItem>
                <ComboBoxItem>VTT</ComboBoxItem>
            </ComboBox>
        </DockPanel>
        <Label></Label>
        <Button x:Name="btnOK" Width="50" HorizontalAlignment="Right" Click="btnOK_Click">OK</Button>
    </StackPanel>
</Window>
